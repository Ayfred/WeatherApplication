<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <TextView
        android:id="@+id/DetailCityName"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="155dp"
        android:gravity="center"
        android:text="@string/cityName"
        android:textColor="#F44336"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DetailTemperature"
        android:layout_width="202dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="64dp"
        android:text="@string/temp_rature"
        android:textColor="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetailCityName" />

    <TextView
        android:id="@+id/DetailPression"
        android:layout_width="201dp"
        android:layout_height="38dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="11dp"
        android:text="@string/pression"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toTopOf="@+id/DetailHumidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetailTemperature" />

    <TextView
        android:id="@+id/DetailHumidity"
        android:layout_width="203dp"
        android:layout_height="54dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="425dp"
        android:text="@string/humidit"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.weatherapplication.view.WeatherDraw
        android:id="@+id/weatherDraw"
        android:layout_width="138dp"
        android:layout_height="276dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="387dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DetailCityName" />
</androidx.constraintlayout.widget.ConstraintLayout>